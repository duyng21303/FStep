<script>
	document.addEventListener('DOMContentLoaded', function () {
		const buttons = document.querySelectorAll('.btn-open-actions');
		const dropdowns = document.querySelectorAll('.user-actions-dropdown');

		buttons.forEach((button, index) => {
			button.addEventListener('click', function () {
				dropdowns.forEach((dropdown, i) => {
					if (i === index) {
						dropdown.style.display = dropdown.style.display === 'none' || dropdown.style.display === '' ? 'block' : 'none';
					} else {
						dropdown.style.display = 'none';
					}
				});
			});
		});

		document.addEventListener('click', function (event) {
			buttons.forEach((button, index) => {
				if (!button.contains(event.target) && !dropdowns[index].contains(event.target)) {
					dropdowns[index].style.display = 'none';
				}
			});
		});
	});
</script>