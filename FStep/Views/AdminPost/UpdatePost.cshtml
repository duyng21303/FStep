@model FStep.ViewModels.PostVM
@{
    ViewData["Title"] = "UpdatePost";
}

<div class="container mt-5">
	<h1 class="mb-4">Sửa Bài Đăng</h1>
	<form asp-action="UpdatePost" method="post" enctype="multipart/form-data" class="update-post-form">
		<input asp-for="IdPost" type="hidden" />
		<input asp-for="IdProduct" type="hidden" />

		<div class="form-box">
			<div class="form-box-left">
				<div class="form-item">
					<label class="form-label my-3">Hình Ảnh Cũ</label>
					<img src="@Url.Content("~/img/postPic/" + Model.Img)" class="img-fluid rounded-top custom-img" alt="Laptop">
				</div>
				<div class="form-item">
					<label class="form-label my-3">Hình Ảnh Mới</label><sup style="color: red">(Có thể Bỏ Qua)</sup>
					<input type="file" name="img" class="form-control">
				</div>
			</div>

			<div class="form-box-right">
				<div class="form-item">
					<label asp-for="Title" class="form-label my-3">Tiêu đề</label><sup style="color: red">*</sup>
					<textarea asp-for="Title" class="form-control" required></textarea>
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="form-item">
					<label asp-for="Description" class="form-label my-3">Mô tả</label><sup style="color: red">*</sup>
					<textarea asp-for="Description" class="form-control" required></textarea>
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				@if (Model.Type == "Sale")
				{
					<div class="form-item">
						<label asp-for="Quantity" class="form-label my-3">Số lượng</label><sup style="color: red">*</sup>
						<input asp-for="Quantity" class="form-control" required>
						<span asp-validation-for="Quantity" class="text-danger"></span>
					</div>
					<div class="form-item">
						<label asp-for="Price" class="form-label my-3">Giá (VND)</label><sup style="color: red">*</sup>
						<input asp-for="Price" class="form-control" required>
						<span asp-validation-for="Price" class="text-danger"></span>
					</div>
				}
			</div>
		</div>
		<button type="submit" class="btn btn-update py-2 px-3 text-uppercase">Cập nhật</button>
	</form>
</div>


<style>
	.update-post-form {
		display: flex;
		flex-direction: column;
		gap: 20px;
	}

	.custom-img {
		max-width: 391.328px !important; /* Set the maximum width */
		height: auto; /* Maintain the aspect ratio */
		margin: 0 auto; /* Center the image if needed */
		display: block; /* Center the image if needed */
	}

	.form-box {
		display: flex;
		gap: 20px;
	}

	.form-box-left {
		flex: 1;
	}

	.form-box-right {
		flex: 2;
	}

	.form-item {
		margin-bottom: 20px;
	}

	.btn-update {
		background-color: yellow !important;
		color: black;
		border-color: yellow !important;
		font-size: 16px;
		font-weight: 700 !important;
		align-self: flex-end;
	}

	.form-label {
		font-weight: bold;
	}

	.text-danger {
		color: red;
		font-size: 13px;
	}
</style>