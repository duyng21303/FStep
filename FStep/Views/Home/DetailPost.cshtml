@model FStep.Data.Post

	<div class="container-fluid">
		<h1 class="mb-4">Create Post</h1>
			<div class="row">

						<div class="form-item col-12">

								<label asp-for="@Model.Content" class="form-label my-3"></label><sup>*</sup>
								<input readonly asp-for="@Model.Content" type="text" class="form-control">
								<span asp-validation-for="@Model.Content" class="text-danger"></span>

						</div>
						<div class="form-item col-6">
							<label class="form-label my-3">Image</label><sup>*</sup>
							<img class="w-100" src="@Url.Content("~/image/" + @Model.Img)">
						</div>

						<div class="form-item col-6">
							<label asp-for="@Model.Detail" class="form-label my-3"></label><sup>*</sup>
			<h4   class="form-control" style="height:150px;">@Html.Raw(Model.Detail)</h4>
							<span asp-validation-for="@Model.Detail" class="text-danger"></span>
						</div>

						

						<div style="background-color=gray;text-align:center" class="mt-2">
							<a asp-action="Index" asp-controller="Home">
								<button class="btn border-secondary py-3 px-4 text-uppercase w-50 text-primary">Chat</button>
							</a>
							
						</div>
					</div>


	<script>
		// Get the element containing the post detail
		var postDetailElement = document.getElementById('postDetail');
		// Extract the text content only
		var htmlContent = postDetailElement.value;
		var textContent = htmlContent.replace('<p>', '').replace('</p>','')
		// Loại bỏ các thẻ <p> bằng cách sử dụng phương thức replace
		// Display the text content in another div
		document.getElementById('postDetail').value = textContent;
	</script>
