@model FStep.Data.Product

@{
	ViewData["Title"] = "Detail";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Product Details Section Begin -->
<section class="product-details spad">
	<div class="container">
		<div class="row gx-4 gx-lg-5 align-items-center">
			<div class="col-lg-6 col-md-6">
				<div class="product__details__pic">
					<div class="product__details__pic__item">
						<div style="min-height:10px;"></div>
						<img class="product__details__pic__item--large" src="@Url.Content("~/image/" + Model.RecieveImg)" alt="..." style="width: 600px; height: 700px;" />
					</div>
					<div class="product__details__pic__slider owl-carousel">
						@if (ViewBag.RecieveImg != null)
						{
							@foreach (var image in ViewBag.RecieveImg)
							{
								<img data-imgbigurl="@Url.Content("~/image/" + image.FileImg)" src="@Url.Content("~/image/" + image.FileImg)" alt="..." style="width: 600px; height: 700px;" />
							}
						}
					</div>
				</div>
			</div>
			<div class="col-lg-6 col-md-6">
				<div class="product__details__text" style="background-color: #CCCCCC; padding: 100px;">
					<h1 style="color: #FF6600;">@Model.Name</h1>
					<div class="product__details__price">
						<span class="text-decoration-line-through">$@Model.Price</span>
						<span>$@Model.Price</span>
					</div>
					<p>@Model.Detail</p>
					<ul>
						<li><b>Quantity:</b> @Model.Quantity</li>
					</ul>
					<div style="min-height:10px;"></div>
					<div class="product__details__quantity">
						<div class="quantity">
							<div class="pro-qty">
								<button class="qty-btn minus">-</button>
								<input type="text" value="1">
								<button class="qty-btn plus">+</button>
							</div>
						</div>
					</div>
					<div style="min-height:10px;"></div>
					<a href="#" class="btn btn-outline-dark flex-shrink-0">
						<i class="bi-cart-fill me-1"></i>
						Buy Now
					</a>
				</div>
			</div>
			<div class="col-lg-12">
				<div class="product__details__tab">
					<ul class="nav nav-tabs" role="tablist">
						<li class="nav-item">
							<div style="min-height:10px;"></div>
							<div class="comment-form d-flex justify-content-center">
								<a class="nav-link active" data-toggle="tab" href="#tabs-1" role="tab" aria-selected="true">Comment</a>
							</div>
							<div style="min-height:15px;"></div>
							<div class="comment-form-content d-flex justify-content-center">
								<div class="textarea-comment">
									<textarea id="" placeholder="" class="textarea"></textarea>
									<button class="button button__cmt-send" style="padding: 5px;">
										<div>Submit</div>
									</button>
								</div>
							</div>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- Product Details Section End -->
