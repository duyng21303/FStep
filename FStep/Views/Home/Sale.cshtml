@model X.PagedList.IPagedList<FStep.ViewModels.SalePostVM>
@using X.PagedList.Mvc.Core;

<!-- Show List Sale Post -->
<div class="container-fluid fruit py-5">
    <div class="container py-5">
        <h1 class="mb-4">Sale: Suggestion today </h1>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="rounded position-relative fruit-item">
                        <div class="fruit-img">
                            <img src="~/image/@item.Image" class="img-fluid w-100 rounded-top" alt="Laptop">
                        </div>
                        <div class="p-4 border border-secondary border-top-0 rounded-bottom">
                            <h4>@item.Title</h4>
                            <p>@item.Description</p>
                            <p class="text-end mb-0 mt-2" style="font-size: 12px;">Ngày tạo: @item.CreateDate.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- Create relationship between page and page -->
        @Html.PagedListPager(Model, page => Url.Action("Sale", new { page = page }))
        <!-- Model: pageList chứa thông tin về các trang hiện tại, số trang, số lượng mục trên mỗi trang-->
        <!-- page => Url.Action("Index", new { page = page }): lamba expression tạo liên kết giữa các trang -->
        <!--          /ControllerName/Index?page=x                  -->
        <!-- End create -->
    </div>
</div>
<!-- End Show -->