@model X.PagedList.IPagedList<FStep.ViewModels.SalePostVM>
@using X.PagedList.Mvc.Core;

<div>
	<!--/slider-->
	<div class="carousel rounded">
		<section id="slider">
			<div class="container">
				<div class="row">
					<div class="col-sm-12">
						<div id="slider-carousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">

							<div class="carousel-inner">
								<div class="carousel-item active bg-carousel-item">
									<div class="row align-items-center">
										<div class="col-sm-6 content-box">
											<h1 class="f-step-title"><span>F</span>-STEP</h1>
											<div class="f-step-content border p-3">
												<h2>FU Student Item Exchange</h2>
												<p>Easily swap items with other FU students. Whether it’s a laptop for a textbook or a mouse for a notebook, trade what you have for what you need.</p>
											</div>
										</div>
										<div class="col-sm-6">
											<img src="~/img/Sliden/1694076724_395_Truong-Dai-hoc-FPT-dao-tao-nganh-vi-mach-ban.jpg" class="d-block w-100 rounded-circle" alt="" />
										</div>
									</div>
								</div>
								<div class="carousel-item bg-carousel-item">
									<div class="row align-items-center">
										<div class="col-sm-6 content-box">
											<h1 class="f-step-title"><span>F</span>-STEP</h1>
											<div class="f-step-content border p-3">
												<h2>FU Student Item Exchange</h2>
												<p>Easily swap items with other FU students. Whether it’s a laptop for a textbook or a mouse for a notebook, trade what you have for what you need.</p>
											</div>
										</div>
										<div class="col-sm-6">
											<img src="~/img/Sliden/1694076724_395_Truong-Dai-hoc-FPT-dao-tao-nganh-vi-mach-ban.jpg" class="d-block w-100 rounded-circle" alt="" />
										</div>
									</div>
								</div>
								<div class="carousel-item bg-carousel-item">
									<div class="row align-items-center">
										<div class="col-sm-6 content-box">
											<h1 class="f-step-title"><span>F</span>-STEP</h1>
											<div class="f-step-content border p-3">
												<h2>FU Student Item Exchange</h2>
												<p>Easily swap items with other FU students. Whether it’s a laptop for a textbook or a mouse for a notebook, trade what you have for what you need.</p>
											</div>
										</div>
										<div class="col-sm-6">
											<img src="~/img/Sliden/1694076724_395_Truong-Dai-hoc-FPT-dao-tao-nganh-vi-mach-ban.jpg" class="d-block w-100 rounded-circle" alt="" />
										</div>
									</div>
								</div>
							</div>


							<button class="carousel-control-prev" type="button" data-bs-target="#slider-carousel" data-bs-slide="prev">
								<span class="carousel-control-prev-icon" aria-hidden="true"></span>
								<span class="visually-hidden">Previous</span>
							</button>
							<button class="carousel-control-next" type="button" data-bs-target="#slider-carousel" data-bs-slide="next">
								<span class="carousel-control-next-icon" aria-hidden="true"></span>
								<span class="visually-hidden">Next</span>
							</button>
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
	<!--/End slider-->
	<!-- Header body  -->
	<div class="container-fluid fruit py-5">
		<div class="container py-5">
			<!-- Title header body  -->
			<div class="row align-items-center mb-4 search-header">
				<div class="col-md-6">
					<h1 class="exchange-title">Sale: Suggestion Today</h1>
				</div>
				<div class="col-md-5">
					<form asp-action="Index" asp-controller="Home" class="d-flex justify-content-end search-form">
						<input type="search" class="form-control search-input" placeholder="keywords" name="query">
						<button class="btn btn-primary search-button" type="submit">
							<i class="fa fa-search search-icon"></i>
						</button>
					</form>
				</div>
				<div class="col-md-1">
					<a asp-action="CreateSalePost" asp-controller="Post">
						<i class="fa fa-plus-square" style="font-size:45px;"></i>
					</a>
				</div>
			</div>
			<!-- End header body -->
			<!-- Start Content Body-->
			<div class="row g-4">
				<div class="col-lg-12">
					<div class="container-contentboby">
						<div class="row g-4">
							<!-- Start of post item column -->
							@foreach (var item in Model)
							{
								<div class="col-md-6 col-lg-4 col-xl-3">
									<div class="rounded position-relative fruit-item">
										<div class="fruit-img">
											<a asp-action="DetailSalePost" asp-controller="Home" asp-route-id="@item.Id">
												<img src="@Url.Content("~/img/postPic/" + item.Img)" class="img-fluid w-100 rounded-top" alt="Laptop">
											</a>
										</div>
										<div class="p-4 border border-secondary border-top-0 rounded-bottom">
											<a asp-action="DetailSalePost" asp-controller="Home" asp-route-id="@item.Id">@Html.Raw(item.Title)</a>
											<p class="description" style="max-height: 40px; overflow: hidden; transition: max-height 0.5s ease;">@Html.Raw(item.Description)</p>
											<p class="price">Price: @Html.Raw(item.Price) (VND)</p>
											<p class="quantity">Quantity: @Html.Raw(item.Quantity)</p>
											<form asp-controller="BuyNow" asp-action="BuyNow" method="get">
												<input type="hidden" name="id" value="@item.Id" />
												<div class="form-group">
													<label for="Quantity">Quantity:</label>
													<input type="number" name="Quantity" class="form-control" />
												</div>
												<button type="submit" class="btn btn-primary">Buy Now</button>
											</form>
											<p class="text-end mb-0 mt-2">CreateDate <span>@item.CreateDate?.ToString("dd/MM/yyyy")</span></p>
										</div>
									</div>
								</div>
							}

						</div>
					</div>
					<!-- Start Content Body-->
					<!-- Create relationship between page and page -->
					@Html.PagedListPager(Model, page => Url.Action("Sale", new { query = ViewBag.Query, page = page }))
					<!-- End create -->
				</div>
			</div>
			<!-- End Show -->
		</div>
	</div>
</div>