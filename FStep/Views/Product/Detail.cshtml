@model FStep.Data.Product
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
@{
	ViewData["Title"] = "Detail";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Product Details Section Begin -->
<section class="product-details spad" style="background-color:#de6262;padding:20px 20px 20px 20px">
	<div class="container" >
		<div class="row gx-4 gx-lg-5 align-items-center">
			<section class="col-12 py-5">
				<div class="container px-4 px-lg-5 my-5">
					<div class="row gx-4 gx-lg-5 align-items-center">
						<div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="@Url.Content("~/image/" + Model.RecieveImg)" alt="..." /></div>
						<div class="col-md-6">
							<h1 class="display-5 fw-bolder">@Model.Name</h1>
							<div class="fs-5 mb-1">
								<span class="">$@Model.Price</span>
							</div>
							<p class="lead">@Model.Detail</p>
							<div class="d-flex">
								<button class="btn btn-outline-secondary" id="increaseQuantity" type="button">
									<i class="bi-dash"></i>
								</button>
								<input class="form-control text-center" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
								<button class="btn btn-outline-secondary me-3" id="increaseQuantity" type="button">
									<i class="bi-plus"></i>
								</button>
								<button class="btn btn-outline-success flex-shrink-0" type="button">
									<i class="bi-cart-fill me-1" style="color:green"></i>
									Buy Now
								</button>
							</div>
						</div>
					</div>
				</div>
			</section>
			<div class="col-lg-12">
				<span class="lead">Add your comment</span>
				<div>
					<textarea class="form-control" style="height:400px;"></textarea>
				</div>
				<div>
					<button class="btn btn-success">Comment</button>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- Product Details Section End -->
