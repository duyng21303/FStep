@model FStep.Models.PagingInfo;
@{
    var aspAction = ViewData["asp-action"].ToString();
    var aspController = ViewData["asp-controller"].ToString();
}

<style>
    .pagination li.active a {
        background-color: #007bff;
    }
</style>

<ul class="pagination pull-right">
    @if (Model.CurrentPage > 1)
    {
        <li><a href="@Url.Action(aspAction, aspController, new { page = Model.CurrentPage - 1, search = Model.Search })"><i class="fa fa-chevron-left"></i></a></li>
    }

    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        if (i == Model.CurrentPage)
        {
            <li class="active"><a href="#">@i</a></li>
        }
        else
        {
            <li><a href="@Url.Action(aspAction, aspController, new { page = i, search = Model.Search })">@i</a></li>
        }
    }

    @if (Model.CurrentPage < Model.TotalPages)
    {
        <li><a href="@Url.Action(aspAction, aspController, new { page = Model.CurrentPage + 1, search = Model.Search })"><i class="fa fa-chevron-right"></i></a></li>
    }
</ul>
